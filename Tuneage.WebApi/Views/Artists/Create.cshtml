                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsBand" /> @Html.DisplayNameFor(model => model.IsBand)
                </label><br />
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPrinciple" /> @Html.DisplayNameFor(model => model.IsPrinciple)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PrincipleArtistId" class="control-label"></label>
                <input asp-for="PrincipleArtistId" class="form-control" />
                <span asp-validation-for="PrincipleArtistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
